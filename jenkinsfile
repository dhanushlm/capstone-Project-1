pipeline {
    agent { label 'Test' }   // âœ… Use your test node label here

    stages {
        stage('Clone Code') {
            steps {
                git branch: 'develop', url: 'https://github.com/dhanushlm/capstone-Project-1.git'
            }
        }

        stage('Deploy to Test Server') {
            steps {
                echo 'Deploying code to Test Server'
                sh '''
                mkdir -p /home/ubuntu/test-deploy/
                cp -r * ~/test-deploy/

                '''
            }
        }
    }
}

