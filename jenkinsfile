pipeline {
    agent any

    stages {
        stage('Pull Code') {
            steps {
                git branch: 'test', url: 'https://github.com/dhanushlm/capstone-Project-1.git'
            }
        }

        stage('Deploy to Test Server') {
            steps {
                sshagent (credentials: ['ansible-key']) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no ubuntu@18.233.224.181 'rm -rf ~/website && git clone https://github.com/dhanushlm/capstone-Project-1.git website'
                    '''
                }
            }
        }
    }
}


