pipeline {
    agent any

    stages {
        stage('Pull Code') {
            steps {
                git branch: 'master', url: 'https://github.com/dhanushlm/capstone-Project-1.git'
            }
        }

        stage('Deploy to Prod Server') {
            steps {
                sshagent (credentials: ['ansible-key-dhanush-prod1']) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no ubuntu@3.84.86.33 'rm -rf ~/website && git clone https://github.com/dhanushlm/capstone-Project-1.git website'
                    '''
                }
            }
        }
    }
}
