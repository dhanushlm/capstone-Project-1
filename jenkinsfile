pipeline {
    agent any

    stages {
        stage('Declarative: Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Clone Code') {
            steps {
                echo 'Cloning the source code from GitHub...'
                sh 'git --version'
                sh 'ls -al'
            }
        }

        stage('Deploy to Test Server') {
            steps {
                echo 'Simulating deploy by copying to /tmp/test-deploy...'
                sh '''
                    mkdir -p /tmp/test-deploy
                    cp -r * /tmp/test-deploy/
                '''
            }
        }
    }
}
