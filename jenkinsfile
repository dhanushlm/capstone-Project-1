pipeline {
    agent any

    stages {
        stage('Clone Code') {
            steps {
                git branch: 'develop', url: 'https://github.com/dhanushlm/capstone-Project-1.git'
            }
        }

        stage('Deploy to Test Server') {
            steps {
                script {
                    def testServer = "ubuntu@54.166.103.54"
                    def keyPath = "/home/ansible/.ssh/id_rsa"

                    sh """
                        echo "Creating remote directory..."
                        ssh -o StrictHostKeyChecking=no -i ${keyPath} ${testServer} 'mkdir -p ~/test-deploy'

                        echo "Copying code to Test Server..."
                        scp -o StrictHostKeyChecking=no -i ${keyPath} -r * ${testServer}:~/test-deploy/
                    """
                }
            }
        }
    }
}
