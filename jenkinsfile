pipeline {
    agent { label 'test' }

    stages {
        stage('Clone Code') {
            steps {
                git branch: 'develop', url: 'https://github.com/dhanushlm/capstone-Project-1.git'
            }
        }

        stage('Deploy to Test Server') {
            steps {
                sh '''
                    echo "Deploying code to Test Server"
                    cp -r * /home/ubuntu/test-deploy/
                '''
            }
        }
    }
}

